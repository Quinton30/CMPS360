import java.util.Scanner;

public class StudentInformationSystem {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        // Input Collection
        String name = "Quinton Alexandre";
        int age = 24;
        double gpa = 1.89;
        int completedCredits = 110;
        int[] studyHours = {3, 3, 3, 3, 3}; // Assuming average study hours per day is 3 for each subject

        // Data Processing
        int totalWeeklyStudyHours = 3 * 5; // 3 hours per day for 5 subjects
        double averageDailyStudyHours = 3.0;
        int totalSemesterStudyHours = 88;
        int remainingCredits = 10;

        // Output
        System.out.println("\nWelcome to the Student Information System!");
        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
        System.out.println("GPA: " + gpa);
        System.out.println("Completed Credits: " + completedCredits);
        System.out.println("Average Study Hours per Day: " + averageDailyStudyHours);
        System.out.println("Total Study Hours per Semester: " + totalSemesterStudyHours);
        System.out.println("Remaining Credits to Graduate: " + remainingCredits);

        scanner.close();
    }
}
